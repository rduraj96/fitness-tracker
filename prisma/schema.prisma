generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  meals    Meal[]
}

model Meal {
  id       Int      @id @default(autoincrement())
  userId   Int
  day      DateTime
  name     String
  calories Int
  protein  Int
  carbs    Int
  fat      Int
  user     User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
