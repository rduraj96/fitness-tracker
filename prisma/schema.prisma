generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  name          String?
  calories      String?
  meals         Meal[]
  supplements   Supplement[]    @relation("UserSupplements")
  supplementLog SupplementLog[]
}

model Meal {
  id       Int      @id @default(autoincrement())
  userId   Int
  day      DateTime
  name     String
  type     String?
  calories Int
  protein  Int
  carbs    Int
  fat      Int
  user     User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Supplement {
  id             Int             @id @default(autoincrement())
  name           String
  user           User            @relation("UserSupplements", fields: [userId], references: [id])
  userId         Int
  supplementLogs SupplementLog[] @relation("SupplementLogs")

  @@index([userId])
}

model SupplementLog {
  id           Int        @id @default(autoincrement())
  day          DateTime
  isTaken      Boolean
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  supplement   Supplement @relation("SupplementLogs", fields: [supplementId], references: [id])
  supplementId Int

  @@index([userId])
  @@index([supplementId])
}
